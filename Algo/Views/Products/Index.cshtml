@model List<Algo.Controllers.ProductList>

@{
    //ViewData["Title"] = "Наши продукты";
}

<div class="breadcrumbs-wrapper">
    <div class="container">
        <div class="row my-5">
            <div class="col-12">
                <div class="breadcrumbs" itemscope="" itemtype="http://schema.org/BreadcrumbList">
                    <span itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
                        <a class="breadcrumbs__link" asp-controller="Home" asp-action="Index" itemprop="item"><span itemprop="name">Главная</span></a>
                        <meta itemprop="position" content="1">
                    </span><span class="breadcrumbs__separator"> › </span>
                    <span class="breadcrumbs__current">Наши продукты</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="products-header">
    <div class="container">
        <div class="row my-3">
            <div class="col-12">
                <h1 class="wt-postheader entry-title">Наши продукты</h1>
            </div>
        </div>
    </div>
</div>
<div class="products-wrapper">
    <div class="container">
        <div class="product-category">
            <div class="row my-3 product-title">
                <div class="col-12">
                    <h5 class="product-title">Продукты на основе «СМИС»</h5>
                </div>
            </div>
            @foreach (var product in Model)
            {
                <div class="row my-2 product-platform align-items-center">
                    <div class="col-md-2 col-12 d-flex align-items-start product-image">
                        <img src="/img/image 31.png" alt="" />
                    </div>
                    <div class="col-md-10 col-12 d-flex flex-column product-platform-description">
                        <h4 class="mb-3">@product.Product.Name</h4>
                        <p>
                            @product.Product.Description''
                        </p>
                        <a asp-action="ProductInfo" asp-controller="Products" class="btn-wt-md btn-mint align-self-start">Подробнее</a>
                    </div>
                </div>
                @if (product.SubProducts != null)
                {
                    @foreach (var subproduct in product.SubProducts)
                    {
                        <div class="row my-2 product-platform-item align-items-center">
                            <div class="col-md-2 col-12 d-flex align-items-start product-image">
                                <img src="/img/image 31.png" alt="" />
                            </div>
                            <div class="col-md-10 col-12 d-flex flex-column product-platform-description">
                                <h4 class="mb-3">@subproduct.Name</h4>
                                <p>
                                    @subproduct.Description
                                </p>
                                <a asp-action="ProductInfo" asp-controller="Products" class="btn-wt-md btn-mint align-self-start">Подробнее</a>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>